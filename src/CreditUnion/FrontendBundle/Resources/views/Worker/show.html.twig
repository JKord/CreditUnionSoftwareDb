{% extends 'CreditUnionFrontendBundle::layout.html.twig' %}
{% block title %}Працівник{% endblock %}

{% block content %}   
<h1>Працівник</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Прізвище</th>
            <td>{{ entity.lastname }}</td>
        </tr>
        <tr>
            <th>Ім'я</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>По батькові</th>
            <td>{{ entity.middlename }}</td>
        </tr>
        <tr>
            <th>Спеціальність</th>
            <td>{{ entity.specialty }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('worker') }}">
            Назад до списку
        </a>
    </li>
    <li>
        <a href="{{ path('worker_edit', { 'id': entity.id }) }}">
            Змінити
        </a>
    </li>
    <li>
        <form action="{{ path('worker_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Видалити</button>
        </form>
    </li>
</ul>
{% endblock %}