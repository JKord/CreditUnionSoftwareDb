{% extends 'CreditUnionFrontendBundle::layout.html.twig' %}
{% block title %}Прайс{% endblock %}

{% block content %}   
<h1>Прайс</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Кредина спілка</th>
            <td>{{ entity.creditunion.getName() }}</td>
        </tr>
        <tr>
            <th>Тип</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>% ставка</th>
            <td>{{ entity.nterestrate }}</td>
        </tr>
        <tr>
            <th>На період (місяців)</th>
            <td>{{ entity.forthedate }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('Price') }}">
           Назад до списку
        </a>
    </li>
    <li>
        <a href="{{ path('Price_edit', { 'id': entity.id }) }}">
            Змінити
        </a>
    </li>
    <li>
        <form action="{{ path('Price_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Видалити</button>
        </form>
    </li>
</ul>
{% endblock %}