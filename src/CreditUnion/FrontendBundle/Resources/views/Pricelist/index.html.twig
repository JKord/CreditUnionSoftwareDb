{% extends 'CreditUnionFrontendBundle::layout.html.twig' %}
{% block title %}Список прайсів{% endblock %}

{% block content %}
<h1>Список прайсів</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Кредина спілка</th>
            <th>Тип</th>
            <th>% ставка</th>
            <th>На період (місяців)</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('Price_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.creditunion.getName() }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.nterestrate }}</td>
            <td>{{ entity.forthedate }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('Price_show', { 'id': entity.id }) }}">Показати</a>
                    </li>
                    <li>
                        <a href="{{ path('Price_edit', { 'id': entity.id }) }}">Змінити</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('Price_new') }}">
           Створити новий запис
        </a>
    </li>
</ul>
{% endblock %}