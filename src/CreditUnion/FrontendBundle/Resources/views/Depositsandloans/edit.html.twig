{% extends 'CreditUnionFrontendBundle::layout.html.twig' %}
{% block title %}Редагування {{ entity.price.getType() }}а{% endblock %}

{% block content %}
<h1>Редагування {{ entity.price.getType() }}а</h1>

<form action="{{ path('Depositsandloans_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Змінити</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('Depositsandloans') }}">
             Назад до списку
        </a>
    </li>
    <li>
        <form action="{{ path('Depositsandloans_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Видалити</button>
        </form>
    </li>
</ul>
{% endblock %}