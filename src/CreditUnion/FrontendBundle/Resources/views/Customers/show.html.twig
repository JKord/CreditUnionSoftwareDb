<h1>Customers</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ entity.lastname }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Middlename</th>
            <td>{{ entity.middlename }}</td>
        </tr>
        <tr>
            <th>Seriesofpassport</th>
            <td>{{ entity.seriesofpassport }}</td>
        </tr>
        <tr>
            <th>Numberofpassport</th>
            <td>{{ entity.numberofpassport }}</td>
        </tr>
        <tr>
            <th>Dateofbirth</th>
            <td>{{ entity.dateofbirth|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Cityofresidence</th>
            <td>{{ entity.cityofresidence }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>Phonenumber</th>
            <td>{{ entity.phonenumber }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('Customers') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('Customers_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('Customers_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
